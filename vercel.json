{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "product_images/**",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    {
      "src": "/product_images/(.*)",
      "dest": "/product_images/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "app/main.py"
    },
    {
      "src": "/static/images/(.*)",
      "dest": "/static/images/$1"
    }
  ]
}